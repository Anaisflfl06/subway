{# templates/panel/index.html.twig #} {% extends 'base.html.twig' %} {% block body %}
  <div class="container">
    <div class="container-page">
      <h1>Produits</h1>
      <a href="{{ path('product_create') }}">
      <button class="button-common button-green">Ajouter</button>
      </a>
      
    </div>
    <div class="table-wrapper">
      <table class="fl-table">
      <thead>
        <tr>
          <th>
            Nom
          </th>
          <th>
          Prix
          </th>
          <th>
          </th>
        </tr>
      </thead>
      <tbody>
      {% for product in products %}
        <tr>
            <td>
              {{product.name}}
            </td>
            <td>
            {{product.price}}
            </td>
            <td style="text-align:right">
              <button class="button-common button-blue">Modifier</button>
              <button onclick="onDelete({{product.id}})" class="button-common button-danger">Supprimer</button>
            </td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
    </div>
    <a href="/" class="button-common button-primary">Retour</a>
  </div>
  <script>
  function onDelete(id){
    fetch(`/products/${id}/delete`, options={ method: "POST" })
    .then(res => window.location.reload())
    .catch(e => console.log(e))
  }
  </script>
{% endblock %}
