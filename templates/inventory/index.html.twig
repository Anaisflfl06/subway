{% extends 'base.html.twig' %}

{% block body %}
    <h1>Inventory</h1>
    <a href="{{ path('inventory_new') }}">Add new stock</a>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Quantity</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for stock in stocks %}
                <tr>
                    <td>{{ stock.name }}</td>
                    <td>{{ stock.quantity }}</td>
                    <td>
                        <a href="{{ path('inventory_edit', {id: stock.id}) }}">Edit</a>
                        <form method="post" action="{{ path('inventory_delete', {id: stock.id}) }}">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ stock.id) }}">
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
